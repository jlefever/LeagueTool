@model global::LeagueTool.Models.ViewModels.ChampionListModel

<div class="container">
    <div class="page-header">
        <h1 class="page-title">
            Champions
        </h1>
        <div class="page-subtitle">showing all @Model.Champions.Count() champions</div>
        <div class="page-options d-flex">
            <select class="form-control custom-select w-auto">
                <option value="abc">Alphabetical</option>
                <option value="asc">Newest</option>
                <option value="desc">Oldest</option>
            </select>
        </div>
    </div>
    <div class="row row-cards">
        <div class="col-lg-4">
            <form class="card">
                <div class="card-body">
                    <div class="form-group">
                        <div class="form-label">Region</div>
                        <select class="custom-select form-control">
                            <option value="">North America (NA)</option>
                            <option value="">Europe West (EUW)</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <div class="form-label">Language</div>
                        <select class="custom-select form-control">
                            <option value="">en_US</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <div class="form-label">Version</div>
                        <select class="custom-select form-control">
                            <option value="">1.821</option>
                        </select>
                    </div>
                </div>
                <div class="card-footer text-right">
                    <button type="submit" class="btn btn-primary">Go!</button>
                </div>
            </form>
        </div>
        <div class="col-lg-8">
            <div class="card">
                <table class="table card-table table-vcenter">
                    <tbody>
                        <tr>
                            <th class="w-1"></th>
                            <th>Name</th>
                            <th class="d-none d-md-table-cell">Title</th>
                            <th class="d-none d-sm-table-cell">Role</th>
                        </tr>
                        @foreach (var champion in Model.Champions)
                        {
                            <tr>
                                <td>
                                    <span class="avatar d-block rounded"
                                          style="background-image: url(@champion.SquareImage)">
                                    </span>
                                </td>
                                <td><a href="#">@champion.Name</a></td>
                                <td class="d-none d-md-table-cell">@champion.Title</td>
                                <td class="d-none d-sm-table-cell">@champion.Role</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>