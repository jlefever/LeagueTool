@model global::LeagueTool.Models.ViewModels.ChampionListModel

<div class="container">
    <div class="page-header">
        <h1 class="page-title">
            Champions
        </h1>
        <div class="page-subtitle">showing all @Model.Champions.Count() champions</div>
    </div>
    <div class="row row-cards">
        <div class="col-lg-4">
            <form class="card">
                <div class="card-body">
                    <div class="form-group">
                        <div class="form-label">Region</div>
                        <select class="custom-select form-control">
                            @foreach (var region in Model.Regions)
                            {
                                <option value="@region.Name">
                                    @region.DisplayName (@region.Name.ToUpperInvariant())
                                </option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <div class="form-label">Language</div>
                        <select class="custom-select form-control">
                            @foreach (var language in Model.Languages)
                            {
                                <option value="@language.Name">@language.DisplayName</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <div class="form-label">Version</div>
                        <select class="custom-select form-control">
                            @foreach (var version in Model.Versions)
                            {
                                <option value="@version">@version</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="card-footer text-right">
                    <button type="submit" class="btn btn-primary">Go!</button>
                </div>
            </form>
        </div>
        <div class="col-lg-8">
            <div class="card">
                <table class="table card-table table-vcenter">
                    <tbody>
                        <tr>
                            <th class="w-1"></th>
                            <th>Name</th>
                            <th class="d-none d-md-table-cell">Title</th>
                            <th class="d-none d-sm-table-cell">Role</th>
                        </tr>
                        @foreach (var champion in Model.Champions)
                        {
                            <tr>
                                <td>
                                    <span class="avatar d-block rounded"
                                          style="background-image: url(@champion.SquareImage)">
                                    </span>
                                </td>
                                <td><a href="#">@champion.Name</a></td>
                                <td class="d-none d-md-table-cell">@champion.Title</td>
                                <td class="d-none d-sm-table-cell">@champion.Role</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>